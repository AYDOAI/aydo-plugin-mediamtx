{
    "host": "127.0.0.1",
    "port": "8000",
    "logging": true,
    "pluginMediaMtx": {
        "videoResolutions": {
            "720p": {
                "width": 1280,
                "height": 720
            },
            "1080p": {
                "width": 1920,
                "height": 1080
            },
            "2k": {
                "width": 2560,
                "height": 1440
            },
            "4k": {
                "width": 3840,
                "height": 2160
            }
        },
