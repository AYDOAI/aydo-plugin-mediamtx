        "configMediaMtx": {
            "logLevel": "info",
            "logDestinations": [
                "file"
            ],
            "logFile": "/srv/mediamtx/mediamtx.log",
            "readTimeout": "10s",
            "writeTimeout": "10s",
            "writeQueueSize": 512,
            "udpMaxPayloadSize": 1472,
            "runOnConnect": "",
            "runOnConnectRestart": false,
            "runOnDisconnect": "",
            "authMethod": "http",
            "authInternalUsers": [
                {
                    "user": "any",
                    "pass": "",
                    "ips": [],
                    "permissions": [
                        {
                            "action": "publish",
                            "path": ""
                        },
                        {
                            "action": "read",
                            "path": ""
                        },
                        {
                            "action": "playback",
                            "path": ""
                        }
                    ]
                },
                {
                    "user": "any",
                    "pass": "",
                    "ips": [
                        "127.0.0.1",
                        "::1"
